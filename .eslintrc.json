{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard-with-typescript"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "prefer-const": "error",
    // отступ в два пробела
    "indent": ["warn", 2],
    // запятые в объектах. Последний ключ с запятой
    "comma-dangle": ["error", "always-multiline"],
    // Убираем точки с запятой
    "semi": ["error", "never"]
  }
}
